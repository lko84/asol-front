program AsolFront;

uses
  Vcl.Forms,
  Vcl.Dialogs,
  Login in 'src\Login.pas' {LoginForm},
  Main in 'src\Main.pas' {Form1};

{$R *.res}

var
  LoginDlg: TLoginForm;
  MainForm: TForm1;
begin
  Application.Initialize;
  Application.MainFormOnTaskbar := True;

  MainForm := TForm1.Create(nil);
  LoginDlg := TLoginForm.Create(nil);

  try
    LoginDlg.ShowModal;
    MainForm.Show;  
    Application.Run;
  finally
    LoginDlg.Free;
    MainForm.Free;
  end;
end.

