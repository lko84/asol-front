unit Main;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Login;

type
  TForm1 = class(TForm)
    Memo1: TMemo;
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.FormShow(Sender: TObject);
var
  LoginDlg: TLoginForm;
begin
  LoginDlg := TLoginForm.Create(Self);
  try
    if LoginDlg.ShowModal <> mrOk then
    begin
      Application.Terminate;
      Exit;
    end;

    // Do something with the token, maybe:
    Memo1.Lines.Text := LoginDlg.Token;
    Show;
  finally
    LoginDlg.Free;
  end;
end;

end.
